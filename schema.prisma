datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
    previewFeatures = ["driverAdapters"]
    binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

model CanvasDesign {
    id            String            @id @default(uuid())
    price         Int               @default(0)
    name          String
    description   String?
    imageurl      String?
    data          Json
    is_active     Boolean           @default(true)
    categories    Category[]
    transactions  Transaction[]
    createdAt     DateTime          @default(now())
    updatedAt     DateTime          @updatedAt
}

model Category {
    id            Int               @id @default(autoincrement())
    name          String
    description   String?
    imageurl      String?
    is_active     Boolean           @default(true)
    designs       CanvasDesign[]
}

model Transaction {
    id            String            @id @default(uuid())
    id_design     String
    total         Int               @default(0)
    description   String?
    key           String?
    token         String?
    status        String            @default("pending")
    settledAt     DateTime?          
    is_active     Boolean           @default(true)
    createdAt     DateTime          @default(now())
    updatedAt     DateTime          @updatedAt

    designs       CanvasDesign      @relation(fields: [id_design], references: [id])
}