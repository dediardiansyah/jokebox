generator client {
  provider        = "prisma-client-js"
  output          = "../src/generated/prisma"
  previewFeatures = ["driverAdapters"]
  binaryTargets   = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CanvasDesign {
  id           String        @id @default(uuid())
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  data         Json
  description  String?
  imageurl     String?
  is_active    Boolean       @default(true)
  name         String
  price        Int           @default(0)
  transactions Transaction[]
  categories   Category[]    @relation("CanvasDesignToCategory")
}

model Category {
  id          Int            @id @default(autoincrement())
  name        String
  description String?
  imageurl    String?
  is_active   Boolean        @default(true)
  designs     CanvasDesign[] @relation("CanvasDesignToCategory")
}

model Transaction {
  id          String       @id @default(uuid())
  id_design   String
  total       Int          @default(0)
  description String?
  key         String?
  token       String?
  status      String       @default("pending")
  settledAt   DateTime?
  is_active   Boolean      @default(true)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  designs     CanvasDesign @relation(fields: [id_design], references: [id])
}
